source "https://rubygems.org"

gem "jekyll", "~> 4.0" # Specifies the Jekyll gem and its version
gem "webrick", "~> 1.7" # Necessary for running Jekyll's local server on some systems
gem "jekyll-feed", "~> 0.15" # Generates an Atom feed for your site (optional, but useful)
gem "jekyll-seo-tag", "~> 2.8" # Adds SEO metadata to your pages (optional, but recommended)
gem "jekyll-paginate", "~> 1.1" # Adds pagination to your site (optional, for blogs or lists)
gem 'jekyll-sitemap', '~> 1.4' #Generates a sitemap.xml file, for SEO.

group :jekyll_plugins do
  gem "jekyll-include-cache" # speeds up build times.
end
